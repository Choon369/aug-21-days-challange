class helloworld
{
    public static void pattern(int n)
    {
        for(int i =1; i<=n;i++)
        {
            for(int j = n-i; j>=1;j--)
            {
                System.out.print(" ");
            }
            for(int j = i;j>=1; j--)
            {
                System.out.print(j);
            }
            for(int j = 2;j<= i;j++)
            {
                System.out.print(j);
            }
            System.out.println();
        }
    }
    public static void main(String[] args)
    {
        int a =4;
        pattern(a);
    }
}
output:-
   1
  212
 32123
4321234
